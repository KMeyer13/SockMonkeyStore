@model IEnumerable<SockMonkeyStore.Models.Category>

@{
    ViewBag.Title = "Home";
}

<main class="homeContent">
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Welcome to Sock Monekying Around!</h1>
        <p class="lead">We are your one stop shop for all things Sock Monkey!</p>
    </section>

    <div>
        <h3>Categories</h3>
        @{
        if (!Model.Any())
            {
                <p>Sorry we dont have any categories to display currently. </p>
            } else
            {
            <section class="pt-4">
                <div class="container px-lg-5">
                    <div class="row gx-lg-5">
                        @foreach (var category in Model)
                        {
                            <div class="col-lg-6 col-xxl-4 mb-5">
                                <div class="card bg-light border-0 h-100">
                                    <div class="card-body text-center p-4 p-lg-5 pt-0 pt-lg-0">
                                        <div class="feature bg-gradient bg-gradient text-black rounded-3 mb-4 mt-n4">
                                            <img class="bi bi-collection" src="..\Content\SSM-Sock-Monkey-Sit-web.jpg" style="height:100px; width: 100px" />
                                            <h2 class="fs-4 fw-bold" style="text-transform:capitalize">
                                            @Html.ActionLink(category.CategoryName, "ProductByCategory", "Product",  new { Id = category.ID }, new {@class = "nav-link"})</h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </section>
                
            }
        }
    </div>
</main>