@model SockMonkeyStore.Models.Account

@{
    ViewBag.Title = "SignIn";
}

<h2>Client Login:</h2>
<form asp-action="Login" method="post">
    <div asp-validation-summary="All"></div>
    <fieldset class="form-group">
        <label asp-for="Email" class="control-label col-xs-2">Email:</label>
        <div class="col-xs-10">
            <input asp-for="Email" class="form-control" />
        </div>
        <span asp-validation-for="Email"></span>
        <label asp-for="Password" class="control-label col-xs-2">Password:</label>
        <div class="col-xs-10">
            <input asp-for="Password" class="form-control" />
        </div>
    </fieldset>
    <span asp-validation-for="Password"></span>
    <br />
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<br />
<p>Don't have an account? @Html.ActionLink("Create One", "CreateAccount", "Account", new { area = "" })</p>

